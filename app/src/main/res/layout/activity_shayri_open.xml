<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".shayri_open">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        >
        <Button
            android:layout_marginLeft="@dimen/_60sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/Zoom_In_button"
            android:background="@drawable/zoom"/>
        <TextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_45sdp"
            android:hint="abc"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:id="@+id/shayti_count_txt"/>
        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/color_change_icon"
            android:background="@drawable/change"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"

        app:cardElevation="@dimen/_30sdp"

        app:cardCornerRadius="@dimen/_20sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"

            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/shayri_show_txt"></TextView>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
 >
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/copy"
                android:id="@+id/copy_button"
                android:layout_marginHorizontal="@dimen/_5sdp"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/swipleft"
                android:id="@+id/swiplefr_botton"
                android:layout_toRightOf="@id/copy_button"
                android:layout_marginHorizontal="@dimen/_5sdp"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/edit"
                android:id="@+id/Edit_button"
                android:layout_toRightOf="@id/swiplefr_botton"
                android:layout_marginHorizontal="@dimen/_5sdp"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/swipright"
                android:id="@+id/swipright_button"
                android:layout_toRightOf="@id/Edit_button"
                android:layout_marginHorizontal="@dimen/_5sdp"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/share"
                android:id="@+id/share_button"
                android:layout_toRightOf="@id/swipright_button"
                android:layout_marginHorizontal="@dimen/_8sdp"/>

        </RelativeLayout>

</LinearLayout>